<div class="row">
  <div class="large-offset-4 large-4 columns">
    <h1>Loop Nova</h1>
  </div>
</div>

<div class="row">
  <div class="large-offset-4 large-4 columns">
    <table>
      <thead>
        <tr>
          <td>URL</td>
          <td>Status</td>
          <td></td>
        </tr>
      </thead>

      <% sites_presenter.each do |site| %>
        <tr class="<%= site.background_color %>">
          <td><%= site.url %></td>
          <td><%= site.most_recent_status %></td>
          <td><%= link_to('details', site_path(site)) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

