<div class="row">
  <div class="large-offset-4 large-4 columns">
    <h1><%= site.url %></h1>
  </div>
</div>

<div class="row">
  <div class="large-offset-4 large-4 columns">
    <table>
      <thead>
        <tr>
          <td>Status</td>
          <td>Created At</td>
        </tr>
      </thead>

      <% site.statuses.order(created_at: :desc).first(10).each do |status| %>
        <tr>
          <td><%= status.status %></td>
          <td><%= status.created_at %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="row">
  <div class="large-offset-4 large-4 columns">
    <%= link_to 'home', root_path %>
  </div>
</div>



